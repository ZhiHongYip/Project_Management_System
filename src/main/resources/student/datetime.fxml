<AnchorPane fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="student.Datetime">
   <children>
      <DatePicker fx:id="datePicker" layoutX="98.0" layoutY="126.0" promptText="Select Date" />
      <Label layoutX="160.0" layoutY="23.0" text="Select Presentation Date Time">
         <font>
            <Font name="Cooper Black" size="21.0" />
         </font></Label>
      <TextField fx:id="timeTextField" layoutX="328.0" layoutY="126.0" prefHeight="26.0" prefWidth="186.0" promptText="Enter Time (e.g., 10:00am)" />
      <Button layoutX="269.0" layoutY="310.0" onAction="#submitDateTime" prefHeight="22.0" prefWidth="61.0" text="Submit">
         <font>
            <Font name="Book Antiqua" size="12.0" />
         </font></Button>
      <Label fx:id="submissionDetailsLabel" layoutX="32.0" layoutY="83.0" />
      <Label fx:id="errorMessage" layoutX="178.0" layoutY="163.0" prefHeight="130.0" prefWidth="242.0" wrapText="true">
         <font>
            <Font name="Corbel Light" size="15.0" />
         </font></Label>
   </children>
   <stylesheets>
      <URL value="@css/button.css" />
      <URL value="@css/label.css" />
      <URL value="@css/styles.css" />
      <URL value="@css/textfield.css" />
